<h1>Current Titles:</h1>
<table>
    <thead> 
        <th>Name</th>
    </thead> 
    <tbody> 
        {{#each titles}}
        <tr> 
            <td>{{name}}</td>
            <td><button onclick="deleteTitle({{id}})">Delete</button></td>
            <td><a href="/titles/{{id}}">Update</a></td>
        </tr> 
        {{/each}} 
    </tbody>
</table>

<h1>Add Title:</h1>
<form id="addtitle" action="/titles" method="post">
    Name: <input type="text" name="name"><br>
    <input type="submit" value="Submit">
</form>


<h1>Current Houses:</h1>
<table>
    <thead> 
        <th>Name</th>
        <th>Sigil</th>
        <th>Words</th>
    </thead>
    <tbody> 
        {{#each houses}}
        <tr> 
            <td>{{name}}</td>
            <td>{{sigil}}</td>
            <td>{{words}}</td>
            <td><button onclick="deleteHouse({{id}})">Delete</button></td>
            <td><a href="/houses/{{id}}">Update</a></td>
        </tr> 
        {{/each}} 
    </tbody>
</table>

<h1>Add House:</h1>
<form id="addhouse" action="/houses" method="post">
    Name: <input type="text" name="name"><br>
    Sigil: <input type="text" name="sigil"><br>
    Words: <input type="text" name="words"><br>
    <input type="submit" value="Submit">
</form>


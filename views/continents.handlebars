<h1>Current Continents:</h1>
<table class="table">
    <thead> 
        <th>Name</th>
    </thead> 
    <tbody> 
        {{#each continents}}
        <tr> 
            <td>{{name}}</td>
            <td><button onclick="deleteContinent({{id}})" class="btn btn-danger">Delete</button></td>
            <td><a href="/continents/{{id}}"><button class="btn btn-secondary">Update</button></a></td>
        </tr> 
        {{/each}} 
    </tbody>
</table>

<h1>Add Continent:</h1>
<form id="addcontinent" action="/continents" method="post">
    <div class="form-group">
        Name: <input type="text" name="name"><br>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary">
    </div>
</form>


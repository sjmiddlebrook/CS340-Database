<h1>Current Continents:</h1>
<table>
    <thead> 
        <th>Name</th>
    </thead> 
    <tbody> 
        {{#each continents}}
        <tr> 
            <td>{{name}}</td>
            <td><button onclick="deleteContinent({{id}})">Delete</button></td>
            <td><a href="/continents/{{id}}">Update</a></td>
        </tr> 
        {{/each}} 
    </tbody>
</table>

<h1>Add Continent:</h1>
<form id="addcontinent" action="/continents" method="post">
    Name: <input type="text" name="name"><br>
    <input type="submit" value="Submit">
</form>

